<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/view_coor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity"
            android:paddingTop="@dimen/dim_view_space_20dp"
            android:paddingBottom="@dimen/dim_view_space_20dp"
            >

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/view_til_rows"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_app_space"
                android:layout_marginLeft="@dimen/dim_app_space"
                android:layout_marginEnd="@dimen/dim_view_space_10dp"
                android:layout_marginRight="@dimen/dim_view_space_10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintEnd_toStartOf="@id/view_til_columns"
                app:layout_constraintRight_toLeftOf="@id/view_til_columns"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintTop_toTopOf="parent"
                app:hintAnimationEnabled="true"
                android:hint="@string/st_rows"
                app:hintEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/view_tiet_rows"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="@string/st_rows" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/view_til_columns"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_view_space_10dp"
                android:layout_marginLeft="@dimen/dim_view_space_10dp"
                android:layout_marginEnd="@dimen/dim_view_space_10dp"
                android:layout_marginRight="@dimen/dim_view_space_10dp"
                app:layout_constraintStart_toEndOf="@id/view_til_rows"
                app:layout_constraintLeft_toRightOf="@id/view_til_rows"
                app:layout_constraintEnd_toStartOf="@id/view_mbtn_apply"
                app:layout_constraintRight_toLeftOf="@id/view_mbtn_apply"
                app:layout_constraintTop_toTopOf="parent"
                app:hintAnimationEnabled="true"
                android:hint="@string/st_columns"
                app:hintEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/view_tiet_columns"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="@string/st_columns" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/view_mbtn_apply"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dim_app_space"
                android:layout_marginRight="@dimen/dim_app_space"
                android:text="@string/st_apply"
                app:layout_constraintTop_toTopOf="@id/view_til_rows"
                app:layout_constraintBottom_toBottomOf="@id/view_til_rows"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <View
                android:id="@+id/view_divider_top"
                android:layout_width="0dp"
                android:layout_height="@dimen/dim_divider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@color/colorDivider"
                android:layout_marginTop="@dimen/dim_view_space_20dp"
                app:layout_constraintTop_toBottomOf="@+id/view_mbtn_apply"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/view_mbtn_random"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/st_random"
                app:cornerRadius="@dimen/dim_radi_mbtn_8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

            <TextView
                style="@style/TvRandomHeading"
                android:id="@+id/view_tv_random_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:padding="@dimen/dim_view_space_10dp"
                app:layout_constraintTop_toTopOf="@id/view_mbtn_random"
                app:layout_constraintBottom_toBottomOf="@id/view_mbtn_random"
                android:layout_marginStart="@dimen/dim_app_space"
                android:layout_marginLeft="@dimen/dim_app_space"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintEnd_toStartOf="@id/view_mbtn_random"
                app:layout_constraintRight_toLeftOf="@id/view_mbtn_random"
                tools:text="100"
                />

            <TextView
                style="@style/TvRandomHeading"
                android:id="@+id/view_tv_random_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:padding="@dimen/dim_view_space_10dp"
                app:layout_constraintTop_toTopOf="@id/view_mbtn_random"
                app:layout_constraintBottom_toBottomOf="@id/view_mbtn_random"
                android:layout_marginStart="@dimen/dim_app_space"
                android:layout_marginLeft="@dimen/dim_app_space"
                android:layout_marginEnd="@dimen/dim_app_space"
                android:layout_marginRight="@dimen/dim_app_space"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toEndOf="@id/view_mbtn_random"
                app:layout_constraintLeft_toRightOf="@id/view_mbtn_random"
                tools:text="#000000"
                />

            <View
                android:id="@+id/view_divider_bottom"
                android:layout_width="0dp"
                android:layout_height="@dimen/dim_divider"
                app:layout_constraintBottom_toTopOf="@+id/view_mbtn_random"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@color/colorDivider"
                android:layout_marginBottom="@dimen/dim_view_space_20dp"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/view_rv"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/dim_app_space"
                android:layout_marginLeft="@dimen/dim_app_space"
                app:layout_constraintTop_toBottomOf="@+id/view_divider_top"
                app:layout_constraintBottom_toTopOf="@+id/view_divider_bottom"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:paddingTop="@dimen/dim_view_space_20dp"
                android:paddingBottom="@dimen/dim_view_space_20dp"
                android:clipToPadding="false"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="5"
                tools:itemCount="100"
                tools:listitem="@layout/item_matrix"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>